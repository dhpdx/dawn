{% schema %}
{
  "name": "Email Collection",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Subscribe for our upcoming launch"
    }
  ]
}
{% endschema %}

{% capture formId %}EmailCollectionForm-{{ section.id }}{% endcapture %}

<section class="email-collection">
  <div class="email-collection__container">
    <h2 class="email-collection__heading">{{ section.settings.heading }}</h2>
    <form id="{{ formId }}" class="email-collection__form" action="/contact#contact_form" method="post">
      <input type="hidden" name="form_type" value="customer" />
      <input type="hidden" name="utf8" value="âœ“" />

      <div class="email-collection__input-group">
        <input class="email-collection__input" type="email" name="contact[email]" placeholder="Enter your email" required />
        <button class="email-collection__submit" type="submit">Subscribe</button>
      </div>
    </form>
  </div>
</section>

<style>
  .email-collection {
    background-color: #f5f5f5;
    padding: 2rem;
    text-align: center;
  }

  .email-collection__heading {
    margin-bottom: 1rem;
  }

  .email-collection__input-group {
    display: flex;
    justify-content: center;
  }

  .email-collection__input {
    padding: 0.5rem;
    border: none;
    border-radius: 4px 0 0 4px;
    width: 60%;
    font-size: 1rem;
  }

  .email-collection__submit {
    padding: 0.5rem;
    background-color: #333;
    color: #fff;
    border: none;
    border-radius: 0 4px 4px 0;
    cursor: pointer;
    font-size: 1rem;
  }

  .email-collection__submit:hover {
    background-color: #555;
  }
</style>
